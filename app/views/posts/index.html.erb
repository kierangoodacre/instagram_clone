<% if @posts.any? %>
  <% @posts.each do |post| %>
    <h2> <%= link_to post.name, post_path(post) %> </h2>
    <%= link_to "Edit #{post.name}", edit_post_path(post)%>
    <%= link_to "Delete #{post.name}", post_path(post), method: :delete %>
  <% end %>
<% else %>
  No posts yet
<% end %>

